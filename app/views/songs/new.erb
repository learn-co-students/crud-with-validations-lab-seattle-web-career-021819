<% if @song.errors.any? %>
  <% @song.errors.full_messages.each do |msg| %>
    <%= msg %>
  <% end %> 
<% end %>

<%= form_for(@song) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :released %>
  <%= f.check_box :released %>
  <br>
  <%= f.label :release_year %>
  <%= f.number_field :release_year %>
  <br>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br>
  <%= f.label :genre %>
  <%= f.text_field :genre, list: "genres_autocomplete" %>
  <datalist id="genres_autocomplete">
    <% Song.genres.each do |genre| %>
      <option value="<%= genre %>">
    <% end %>
  </datalist>
  <br>
  <%= f.submit %>
  <br>
<% end %>
