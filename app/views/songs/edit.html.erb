<h1>Create a New Song </h1>

<% if @song.errors.any?  %>
  <div id="error explanation">
  <h2>We found a few errors in your form:</h2>
  <ul>
  <% @song.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end  %>
  </ul>
<% end  %>

<%= form_for @song do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :released, "Is Song Released (T/F)" %>
  <%= f.check_box :released %>
  <%= f.label :release_year, "Year Song Released" %>
  <%= f.number_field :release_year%>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <%= f.label :genre %>
  <%= f.text_field :genre %>
  <%= f.submit %>
  </div>
<% end %>

